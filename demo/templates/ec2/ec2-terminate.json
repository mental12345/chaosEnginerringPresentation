{
  "description": "ec2-instance-terminate",
  "roleArn": "arn:aws:iam::538412665789:role/FIS-ExecutionRole",
  "targets": {
    "EC2Instances": {
      "resourceType": "aws:ec2:instance",
      "selectionMode": "PERCENT(25)",
      "resourceTags": {
        "app": "demo",
        "chaos-ready": "true"
      }
    }
  },
  "actions": {
    "TerminateInstances": {
      "actionId": "aws:ec2:terminate-instances",
      "description": "Terminate all EC2 instances tagged chaos-ready=true",
      "parameters": {},
      "targets": {
        "Instances": "EC2Instances"
      }
    }
  },
  "stopConditions": [
    {
      "source": "none"
    }
  ],
  "tags": {
    "Service": "EC2",
    "Experiment": "StopInstances"
  },
  "experimentOptions" :{
    "accountTarget": "single-account",
    "emptyTargetResolutionMode": "fail"
  }
  
}
